{
  "Name": "ovs",
  "Description": "OVS Docker Network Plugin (Go)",
  "Entrypoint": ["/usr/bin/ovs-plugin"],
  "WorkDir": "/",
  "Network": {
    "Type": "host"
  },
  "Interface": {
    "Socket": "ovs.sock",
    "Types": ["docker.network/driver"]
  },
  "Linux": {
    "Capabilities": ["NET_ADMIN", "NET_RAW", "SYS_ADMIN"],
    "AllowAllDevices": true
  },
  "Mounts": [
    {
      "Source": "/run/docker/plugins",
      "Destination": "/run/docker/plugins",
      "Type": "bind",
      "Options": ["rbind","rw"]
    }
],
  "Implements": ["NetworkDriver"]
}

