# This is the "slim" variant of the Debian base image.
# Many files which are normally unnecessary in containers are excluded,
# and this configuration file keeps them that way.

# dpkg -S '/usr/share/doc/*'
#  apt base-files base-passwd bash bsdutils coreutils dash debconf 
#  debian-archive-keyring debianutils diffutils dpkg findutils 
#  gcc-14-base:amd64 grep gzip hostname init-system-helpers libacl1:amd64 
#  libapt-pkg7.0:amd64 libattr1:amd64 libaudit-common libaudit1:amd64 
#  libblkid1:amd64 libbsd0:amd64 libbz2-1.0:amd64 libc-bin libc6:amd64 
#  libcap-ng0:amd64 libcap2:amd64 libcrypt1:amd64 libdb5.3t64:amd64 
#  libdebconfclient0:amd64 libgcc-s1:amd64 libgmp10:amd64 libhogweed6t64:amd64 
#  liblastlog2-2:amd64 liblz4-1:amd64 liblzma5:amd64 libmd0:amd64 
#  libmount1:amd64 libnettle8t64:amd64 libpam-modules-bin libpam-modules:amd64 
#  libpam-runtime libpam0g:amd64 libpcre2-8-0:amd64 libseccomp2:amd64 
#  libselinux1:amd64 libsemanage-common libsemanage2:amd64 libsepol2:amd64 
#  libsmartcols1:amd64 libsqlite3-0:amd64 libssl3t64:amd64 libstdc++6:amd64 
#  libsystemd0:amd64 libtinfo6:amd64 libudev1:amd64 libuuid1:amd64 
#  libxxhash0:amd64 libzstd1:amd64 login login.defs mawk mount ncurses-base 
#  ncurses-bin openssl-provider-legacy passwd perl-base sed sqv sysvinit-utils 
#  tar tzdata util-linux zlib1g:amd64
path-exclude /usr/share/doc/*

# dpkg -S '/usr/share/doc/kde/HTML/*/*'
#  dpkg-query: no path found matching pattern /usr/share/doc/kde/HTML/*/*
path-exclude /usr/share/doc/kde/HTML/*/*

# dpkg -S '/usr/share/gnome/help/*/*'
#  dpkg-query: no path found matching pattern /usr/share/gnome/help/*/*
path-exclude /usr/share/gnome/help/*/*

# dpkg -S '/usr/share/info/*'
#  coreutils diffutils findutils grep gzip sed
path-exclude /usr/share/info/*

# dpkg -S '/usr/share/linda/*'
#  dpkg-query: no path found matching pattern /usr/share/linda/*
path-exclude /usr/share/linda/*

# dpkg -S '/usr/share/lintian/overrides/*'
#  apt base-files base-passwd bash bsdutils coreutils dash debconf dpkg 
#  libacl1:amd64 libattr1:amd64 libblkid1:amd64 libbsd0:amd64 libc-bin 
#  libc6:amd64 libdb5.3t64:amd64 libgcc-s1:amd64 libhogweed6t64:amd64 
#  libmount1:amd64 libnettle8t64:amd64 libpam-modules-bin libpam-modules:amd64 
#  libpam-runtime libpam0g:amd64 libsmartcols1:amd64 libssl3t64:amd64 login 
#  mount ncurses-base passwd perl-base tzdata util-linux
path-exclude /usr/share/lintian/overrides/*

# dpkg -S '/usr/share/locale/*'
#  apt bash coreutils diffutils dpkg findutils grep libapt-pkg7.0:amd64 
#  libpam-runtime passwd sed tar
path-exclude /usr/share/locale/*

# dpkg -S '/usr/share/man/*'
#  apt base-passwd bash bsdutils coreutils dash debconf debianutils diffutils 
#  dpkg findutils grep gzip hostname init-system-helpers libaudit-common 
#  libc-bin libpam-runtime libsemanage-common login login.defs mawk mount 
#  ncurses-bin passwd perl-base sed sqv sysvinit-utils tar util-linux
path-exclude /usr/share/man/*

# dpkg -S '/usr/share/omf/*/*-*.emf'
#  dpkg-query: no path found matching pattern /usr/share/omf/*/*-*.emf
path-exclude /usr/share/omf/*/*-*.emf

path-include /usr/share/doc/*/copyright
path-include /usr/share/doc/kde/HTML/C/*
path-include /usr/share/gnome/help/*/C/*
path-include /usr/share/locale/all_languages
path-include /usr/share/locale/currency/*
path-include /usr/share/locale/l10n/*
path-include /usr/share/locale/languages
path-include /usr/share/locale/locale.alias
path-include /usr/share/omf/*/*-C.emf
